<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_quotation_template_crm_form" model="ir.ui.view">
        <field name="name">quotation.template.crm.form</field>
        <field name="model">quotation.template.crm</field>
        <field name="arch" type="xml">
            <form string="Quotation Template">
                <sheet>
                    <group>
                        <field name="section_heading"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST / TREE VIEW -->
    <record id="view_quotation_template_crm_tree" model="ir.ui.view">
        <field name="name">quotation.template.crm.tree</field>
        <field name="model">quotation.template.crm</field>
        <field name="arch" type="xml">
            <list string="Quotation Template">
                <field name="section_heading"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_quotation_template_crm" model="ir.actions.act_window">
        <field name="name">Quotation Template CRM</field>
        <field name="res_model">quotation.template.crm</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_quotation_template_crm_tree"/>
    </record>

    <!-- MENU -->
    <menuitem id="menu_quotation_template_crm_root"
              name="Quotation Template CRM"
              parent="sale.menu_sale_config"
              action="action_quotation_template_crm"/>
</odoo>
